<h2>Add Album</h2>
<form method="POST" action="/albums">
  <label for="title">Title:</label>
  <input id="title" type="text" name="title"/>
  <br/>
  <br/>
  <label for="artist_select">Select an Artist id:</label>
  <select id="artist_id" name ="artist_id">
  <% @artists.each do |artist| %>
    <option value= "<%= artist.id %>">   <%= artist.name %> </option>
  <% end %>
  </select>
  <br/>
  <br/>
  <label for="genre_select">Select a Genre id:</label>
  <select id="genre_id" name ="genre_id">
  <% @genres.each do |genre| %>
    <option value= "<%= genre.id %>">   <%= genre.type %> </option>
  <% end %>
  </select>
  <label for="buy_price">Buy Price:</label>
  <input id="buy_price" type="number" step="0.01" name="buy_price"/>
  <br/>
  <br/>
  <label for="sell_price">Sell Price:</label>
  <input id="sell_price" type="number" step="0.01" name="sell_price"/>
  <br/>
  <br/>
  <label for="quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity"/>

  <br/>
  <br/>
  
  <br/>
  <br/>
  <input type="submit" value="Add Album"/>
</form>