<h2>Albums</h2>

<div id="album-wrapper">
  <% @albums.each do |album| %>

  <div class="album">
    <h3><%= album.title %></h3>
    <p>Artist: <%= album.artist.name %></p>
    <p>Genre: <%= album.genre.type %> </p>
    <p>Quantity in Stock: <%= album.quantity %> </p>
    <p>Cost Price: <%= album.buy_price %> </p>
  </div>

<% end %>
</div>
